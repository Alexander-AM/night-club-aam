<%- include ../partials/head-start %>
    <link rel="stylesheet" href="/assets/css/book.css">
    </head>
    <body>
        <%- include ../partials/loader %>
        <%- include ../partials/nav %>

        <main>
            <section class="title-area">
                <h1 class="section-header wide">Book Table</h1>
            </section>

            <div class="constrictor">
                <section class="table-picker">
                    
                </section>
                <section>
                    <h2 class="book-title">Book A Table</h2>

                    <form id="book-form">
                        <section class="side-by-side">
                            <section class="left-side">
                                <input type="text" name="name" id="book-name" placeholder="Your Name">
                                <input type="text" name="table" id="book-table" placeholder="Table Number">
                                <input type="text" name="date" id="book-date" placeholder="Select Date">
                            </section>
                            <section class="right-side">
                                <input type="text" name="email" id="book-email" placeholder="Your Email">
                                <input type="text" name="guests" id="book-guests" placeholder="Number of Guests">
                                <input type="text" name="number" id="book-number" placeholder="Your Contact Number">
                            </section>
                        </section>

                        <textarea name="comment" id="book-comment" cols="30" rows="10"></textarea>

                        <div class="button-wrapper">
                            <button id="book-reserve">Reserve</button>
                        </div>
                    </form>
                </section>
            </div>
        </main>

        <%- include ../partials/footer %>
        
        <script src="/assets/js/book.js"></script>
    </body>
</html>