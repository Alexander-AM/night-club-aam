                    <div class="lightbox-right"></div>
                </div>
            </section>

            <section class="section-6">
                <div class="lifted">
                    <div class="constrictor">
                        <div class="slider-wrapper testimonies-slider-wrapper">
                            <div class="slider testimonies-slider">
                                <!-- Testimonies slider items go here -->
                            </div>
        
                            <div class="slider-controls testimonies-slider-controls">
                                <!-- Testimonies slider controls go here -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section-8">
                <div class="constrictor">
                    <h3>Want the latest club news</h3>
                    <p>Subscribe to our newsletter and never miss a <a href="/">Event</a></p>

                    <form id="newsletter-form">
                        <input type="text" name="email" id="newsletter-input-email" placeholder="Enter Your Email">
                        <button id="newsletter-input-subscribe">Subscribe</button>
                    </form>
                </div>
            </section>
        </main>

        <%- include ../partials/footer %>

        <script src="/assets/js/index.js"></script>
