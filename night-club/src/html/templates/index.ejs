                        </div>
                    </div>

                    <div class="image-container">
                        <img src="/assets/img/content/reastaurant_1.jpg">
                        <div class="image-cover">
                            <i class="fas fa-utensils"></i>
                            <h3>Restaurant</h3>
                            <p>
                                Lorem ipsum...
                            </p>
                        </div>
                    </div>

                    <div class="image-container">
                        <img src="/assets/img/content/thumb2.jpg">
                        <div class="image-cover">
                            <i class="fas fa-glass-cheers"></i>
                            <h3>Bar</h3>
                            <p>
                                Lorem ipsum...
                            </p>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section-2">
                <div class="lifted">
                    <h1 class="section-header">Events of the month</h1>

                    <div class="constrictor">
                        <div class="slider-wrapper events-slider-wrapper">
                            <div class="slider events-slider">
                                <!-- Events slider items go here -->
                            </div>
        
                            <div class="slider-controls events-slider-controls">
                                <!-- Events slider controls go here -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section-3">
                <h1 class="section-header">Night club gallery</h1>

                <div class="gallery-container">
                    <div class="gallery-item">
                        <img src="http://localhost:4000/file-bucket/gallery1_big.jpg">
                        <div class="gallery-item-cover"></div>
                    </div>
                </div>

                <div class="lightbox">
                    <div class="lightbox-left"></div>

                    <section class="lightbox-post">
                        <section class="upper-section">
                            <img src="http://localhost:4000/file-bucket/gallery1_big.jpg">
                        </section>
                        
                        <section class="lower-section">
                            <h2 class="lightbox-title">Night Club Party</h2>
