<%- include ../partials/head-start %>
    <link rel="stylesheet" href="/assets/css/contact.css">
    </head>
    <body>
        <%- include ../partials/loader %>
        <%- include ../partials/nav %>

        <main>
            <section class="title-area">
                <h1 class="section-header wide">Contact Us</h1>
            </section>

            <div class="constrictor">
                <section class="side-by-side">
                    <section class="left-side">
                        <form id="message-form">
                            <input type="text" name="name" id="message-input-name" placeholder="Your name">
                            <input type="text" name="email" id="message-input-email" placeholder="Your email">
                            <input type="text" name="website" id="message-input-website" placeholder="Your website">
                            <textarea name="comment" id="message-input-comment" cols="30" rows="10" placeholder="Your comment"></textarea>

                            <div class="button-wrapper">
                                <button id="message-input-submit">Submit</button>
                            </div>
                        </form>
                    </section>
                    <section class="right-side">
                        <div class="popup-area">
                            <section>
                                <article class="popup-segment">
                                    <img src="/assets/img/icon_map.svg">
                                    <address>
                                        <p>
                                            04, A Agroha Nagar, Agra Mumbai National Highway No.3, Dewas # 455001 India.
                                        </p>
                                    </address>
                                </article>
                                <article class="popup-segment">
                                    <img src="/assets/img/icon_contact.svg">
                                    <address>
                                        <p>
                                            +61 8 7804 6310
                                        </p>
                                    </address>
                                </article>
                            </section>
                            <section>
                                <article class="popup-segment">
                                    <img src="/assets/img/icon_mail.svg">
                                    <address>
                                        <p>
                                            @Hsoft.com
                                        </p>
                                    </address>
                                </article>
                                <article class="popup-segment">
                                    <img src="/assets/img/icon_www.svg">
                                    <address>
                                        <p>
                                            www.Hsoft.com
                                        </p>
                                    </address>
                                </article>
                            </section>
                        </div>
                    </section>
                </section>
            </div>
        </main>

        <%- include ../partials/footer %>
        
        <script src="/assets/js/contact.js"></script>
    </body>
</html>